@model IEnumerable<InmoNovara.Models.Inmueble>

@{
    ViewData["Title"] = "Inmueble";
}

<h1>Inicio ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Crear Nuevo ViewData["Title"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdInmueble)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ambiente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tamaño)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPropietario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdInmueble)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ambiente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tamaño)
            </td>
            <td>
                @(item.Propietario.Nombre + " " + item.Propietario.Apellido)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Editar" asp-route-id="@item.IdInmueble" title="Editar"><i class="fas fa-pencil-alt"></i></a>
                <a class="btn btn-danger" asp-action="Eliminar" asp-route-id="@item.IdInmueble" title="Eliminar"><i class="fas fa-trash-alt"></i></a>
                <a class="btn btn-info" asp-action="Detalles" asp-route-id="@item.IdInmueble" title="Detalles"><i class="fas fa-book"></i></a>

            </td>
        </tr>
}
    </tbody>
</table>
