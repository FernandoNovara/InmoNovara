@model InmoNovara.Models.Pago

@{
    ViewData["Title"] = "Editar";
    var contrato = (List<Contrato>)ViewBag.contrato;
}

<h1>Editar</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdContrato" class="control-label"></label>
                <select name="IdContrato" class="form-control">
                    @foreach (var item in contrato)
                    {
                        @:<option @(item.IdContrato==Model.IdContrato ? "selected" : "") value="@item.IdContrato">@item.IdContrato</option>
                    }
                </select>
                <span asp-validation-for="IdContrato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaPago" class="control-label"></label>
                <input type="Date" asp-for="FechaPago" class="form-control" />
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cambiar" class="btn btn-danger" />|
                <a class="btn btn-primary" asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
